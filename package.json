{
  "name": "react-native-ccl",
  "version": "0.1.23",
  "description": "react native component library",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "android",
    "ios",
    "cpp",
    "react-native-ccl.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example/ios && pod install --silent",
    "bootstrap": "yarn example && yarn && yarn pods",
    "clear_node_modules": "rm -rf node_modules",
    "clear_npm": "npm cache clean --force",
    "clear_package": "rm -rf package-lock.json",
    "clear_libs": "rm -rf lib",
    "clear": "yarn clear_node_modules && yarn clear_npm && yarn clear_package && yarn clear_libs",
    "fresh": "yarn clear && yarn",
    "all-fresh": "yarn fresh && yarn example fresh"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/cozuf/react-native-ccl",
  "author": "Yusuf Co≈ükun <coskunyusuf43@gmail.com> (https://github.com/cozuf)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cozuf/react-native-ccl/issues"
  },
  "homepage": "https://github.com/cozuf/react-native-ccl#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "moment": "2.29.1"
  },
  "devDependencies": {
    "@babel/core": "7.12.9",
    "@babel/runtime": "7.12.5",
    "@commitlint/config-conventional": "11.0.0",
    "@react-native-community/eslint-config": "2.0.0",
    "@release-it/conventional-changelog": "2.0.0",
    "@types/jest": "26.0.23",
    "@types/react": "16.9.19",
    "@types/react-native": "0.64.5",
    "@types/react-test-renderer": "16.9.2",
    "babel-jest": "26.6.3",
    "commitlint": "11.0.0",
    "eslint": "7.14.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "metro-react-native-babel-preset": "0.64.0",
    "pod-install": "0.1.0",
    "prettier": "2.0.5",
    "react": "17.0.1",
    "react-native": "0.64.3",
    "react-native-builder-bob": "^0.18.0",
    "react-native-date-picker": "3.4.2",
    "react-native-gesture-handler": "1.10.3",
    "react-native-indicators": "0.17.0",
    "react-native-modalize": "2.0.8",
    "react-native-vector-icons": "8.1.0",
    "react-test-renderer": "17.0.1",
    "release-it": "14.2.2",
    "typescript": "3.8.3"
  },
  "peerDependencies": {
    "react": ">=17.0.1",
    "react-native": ">=0.64.3",
    "react-native-date-picker": ">=3.4.2",
    "react-native-gesture-handler": ">=1.10.3",
    "react-native-indicators": ">=0.17.0",
    "react-native-modalize": ">=2.0.8",
    "react-native-vector-icons": ">=8.1.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
